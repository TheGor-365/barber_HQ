<% if @message && @message.length > 0 %>
  <div class="alert alert-success">
    <%= @message %>
  </div>
<% end %>

<h2 class="mt-5">Visit us</h2>

<form action="/visit" method="POST">
  <div class="form-group">
    <label>Your name</label>
    <input name="client[username]" type="text" class="form-control" value="<%= @c.username %>">
  </div>
  <div class="form-group">
    <label>Your phone</label>
    <input name="client[phone]" type="text" class="form-control" value="<%= @c.phone %>">
  </div>
  <div class="form-group">
    <label>Visiting date and time</label>
    <input id="datetimepicker" name="client[datestamp]" type="text" class="form-control" value="<%= @c.datestamp %>" autocomplete="off">
  </div>

  <div class="form-group">
    <label for="select_barber">Select the color for hear:</label><br>
    <select class="form-control" id="color_picker" name="client[color]">
      <option value="none">None</option>
      <option value="#7bd148">Green</option>
      <option value="#5484ed">Bold blue</option>
      <option value="#a4bdfc">Blue</option>
      <option value="#46d6db">Turquoise</option>
      <option value="#7ae7bf">Light green</option>
      <option value="#51b749">Bold green</option>
      <option value="#fbd75b">Yellow</option>
      <option value="#ffb878">Orange</option>
      <option value="#ff887c">Red</option>
      <option value="#dc2127">Bold red</option>
      <option value="#dbadff">Purple</option>
      <option value="#e1e1e1">Gray</option>
    </select>
  </div>

  <button type="submit" class="btn btn-primary">Send</button>
</form>

<script type="text/javascript">
	// Simplecolorpicker
	$(function() {
		$('#color_picker').simplecolorpicker();
	});
	// Datetimepicker
	$(function() {
		$('#datetimepicker').datetimepicker();
	});
</script>
